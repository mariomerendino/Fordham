//About: Prints size of int, float, short, long, char, and int*
#include <iostream>
using namespace std;

int main(){
    cout << "Printing Size in bytes of..." << endl;
    cout << "\tInt: " << sizeof(int) << endl;
    cout << "\tFloat: " << sizeof(float) << endl;
    cout << "\tShort: " << sizeof(short) << endl;
    cout << "\tLong: " << sizeof(long) << endl;
    cout << "\tChar: " << sizeof(char) << endl;
    cout << "\tPointer to an Int: " << sizeof(int*) << endl; 
}]0;merendino@storm:~/CISC3593[merendino@storm CISC3593]$ ./a.out
